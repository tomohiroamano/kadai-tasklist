<div>
    <p class="mb-0">ステータス</p>
    <p class="mb-0"><%= @task.status %> </p>
    <br>
    <p class="mb-0">タスク</p>
    <p class="mb-0"><%= @task.content %></p>
    <br>
</div>

<div>
    <% if current_user == @task.user %>
        <%= link_to "Delete", @task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
        <%= link_to "Update", edit_task_path(@task), class: 'btn btn-success btn-sm'%>
    <% end %>
</div>
